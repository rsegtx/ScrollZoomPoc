<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScrollZoomPoc.MainPage">
    <ContentPage.Content>
        <VerticalStackLayout HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Spacing="20">
            <Button
                Text="Paged Content" 
                Clicked="OnPagedContentClicked"
                WidthRequest="200"
                HorizontalOptions="Center"/>
            <!--<Button
                Text="Paged Content 2" 
                Clicked="OnPagedContent2Clicked"
                WidthRequest="200"
                HorizontalOptions="Center"/>-->
            <Button
                Text="Scrolled Content" 
                Clicked="OnScrolledContentClicked"
                WidthRequest="200"
                HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>